{
  "name": "drag-drop-polyfill",
  "version": "2.0.0-beta.3",
  "description": "Polyfill for making HTML5 drag and drop possible in all browsers.",
  "main": "release/drag-drop-polyfill.min.js",
  "homepage": "http://timruffles.github.io/ios-html5-drag-drop-shim/demo/",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tsconfig-lint .",
    "compile": "tsc -p .",
    "rollup:main": "rollup src/drag-drop-polyfill.js -n DragDropPolyfill -c rollup.config.js -o release/drag-drop-polyfill.js",
    "rollup:scroll": "rollup src/drag-drop-polyfill-scroll-behaviour.js -n DragDropPolyfill -c rollup.config.js -o release/drag-drop-polyfill-scroll-behaviour.js",
    "rollup": "npm run rollup:main && npm run rollup:scroll",
    "uglify:main": "uglifyjs release/drag-drop-polyfill.js --comments all -m -c -o release/drag-drop-polyfill.min.js --source-map release/drag-drop-polyfill.min.js.map --source-map-url drag-drop-polyfill.min.js.map --in-source-map release/drag-drop-polyfill.js.map",
    "uglify:scroll": "uglifyjs release/drag-drop-polyfill-scroll-behaviour.js --comments all -m -c -o release/drag-drop-polyfill-scroll-behaviour.min.js --source-map release/drag-drop-polyfill-scroll-behaviour.min.js.map --source-map-url drag-drop-polyfill-scroll-behaviour.min.js.map --in-source-map release/drag-drop-polyfill-scroll-behaviour.js.map",
    "uglify": "npm run uglify:main && npm run uglify:scroll",
    "build": "npm run compile && npm run rollup && npm run uglify && cp ./src/*.d.ts ./release/",
    "dist": "npm run lint && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/timruffles/ios-html5-drag-drop-shim.git"
  },
  "keywords": [
    "dragdrop",
    "drag-drop",
    "html5",
    "shim",
    "mobile",
    "polyfill"
  ],
  "author": "Tim Ruffles <me@truffles.me.uk>",
  "contributors": [
    "Stefan Steinhart <stefansteinhart@artec-engineering.com>",
    "Kaur Kuut <strom@nevermore.ee>",
    "Tim Ruffles <me@truffles.me.uk>",
    "Joshua-Smith <noidea@example.com>",
    "Jason Hickner <jhickner@gmail.com>",
    "Matt Oakley <matt@annaandmatt.net>",
    "James Smith <jellyes2@gmail.com>",
    "James Shore <shore.james@gmail.com>",
    "Paul Shirren <shirro@shirro.com>"
  ],
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/timruffles/ios-html5-drag-drop-shim/issues"
  },
  "devDependencies": {
    "rollup": "^0.41.4",
    "rollup-plugin-cleanup": "^1.0.0",
    "rollup-plugin-sourcemaps": "^0.4.1",
    "rollup-plugin-uglify": "^1.0.1",
    "tsconfig-lint": "^0.12.0",
    "tslint": "^4.5.1",
    "typescript": "^2.2.0",
    "uglifyjs": "^2.4.10"
  }
}
